                        android:layout_width="wrap_content"
                        android:layout_height="220dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="0dp"
                            android:layout_height="168dp"
