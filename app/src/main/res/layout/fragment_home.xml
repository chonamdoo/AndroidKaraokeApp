                    <include layout="@layout/item_rv_feature_songs" />

                    <include layout="@layout/item_rv_feature_songs" />

                    <include layout="@layout/item_rv_feature_songs" />
                </LinearLayout>

                <include layout="@layout/item_topic_label_popularsharerecords"/>
