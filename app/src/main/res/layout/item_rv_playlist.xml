<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/itemPlaylist"
    android:clickable="true"
    android:background="@drawable/btn_ripple_item"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/tvIndex"
        android:src="@drawable/ic_playlist_square_button"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tvPlaylistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="your playlist"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvIndex"
        app:layout_constraintRight_toLeftOf="@id/btnMorePl"/>
    <TextView
        android:id="@+id/tvSinger"
        android:text="3 songs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvPlaylistName"
        app:layout_constraintLeft_toLeftOf="@id/tvPlaylistName"/>
    <ImageButton
        android:id="@+id/btnMorePl"
        android:background="@drawable/btn_more_item_pl"
        android:src="@drawable/ic_more_vert"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
