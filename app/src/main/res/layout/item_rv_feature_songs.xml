<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp">

    <ImageView
        android:id="@+id/iv_image_cover_fs"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_song_name_fs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="What makes you beautiful beautiful beautiful"
        android:textSize="16sp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_image_cover_fs"
        app:layout_constraintRight_toLeftOf="@id/btn_sing_fs"/>

    <TextView
        android:id="@+id/tv_singer_fs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="One Direction"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/tv_song_name_fs"
        app:layout_constraintLeft_toLeftOf="@id/tv_song_name_fs"
        app:layout_constraintRight_toLeftOf="@id/btn_sing_fs"/>
    <TextView
        android:id="@+id/tv_numview_fs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="100 views"
        android:textSize="14sp"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintTop_toBottomOf="@id/tv_singer_fs"
        app:layout_constraintLeft_toLeftOf="@id/tv_singer_fs"
        app:layout_constraintRight_toLeftOf="@id/btn_sing_fs"/>
    <!-- Button Sing -->
    <LinearLayout
        android:id="@+id/btn_sing_fs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_round_4dp_black"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="SING"
            android:textColor="@android:color/black"
            android:clickable="true"
            android:background="@drawable/btn_ripple"
            android:focusable="true" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>