<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image2"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_song_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Love yourself"
        android:textSize="16sp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_cover"
        app:layout_constraintRight_toLeftOf="@id/btn_sing"/>

    <TextView
        android:id="@+id/tv_singer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_stars_black_24dp"
        android:drawablePadding="4dp"
        android:text="Justin bieber"
        android:textColor="#FFB7B7B7"
        android:textSize="14sp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_song_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_song_name"
        app:layout_constraintRight_toLeftOf="@id/btn_sing"/>

    <TextView
        android:id="@+id/tv_playno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="100 views"
        android:textColor="#B3135f96"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_singer"
        app:layout_constraintRight_toLeftOf="@id/btn_sing"/>
    <Button
        android:id="@+id/btn_sing"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/btn_sing_allsongs"
        android:text="Sing"
        android:textColor="#135f96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>