<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.trung.karaokeapp.fragment.RecentFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@android:color/black"
                        android:drawableEnd="@drawable/ic_clear_black_16dp"
                        android:drawablePadding="8dp"
                        android:id="@+id/text_status_select"
                        android:paddingLeft="8dp"
                        android:layout_centerVertical="true"
                        android:text="0 item selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:clickable="true"
                        android:background="@drawable/btn_ripple"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:focusable="true">
                        <TextView
                            android:textAlignment="center"
                            android:layout_gravity="center_vertical"
                            android:drawableStart="@drawable/ic_delete_black_24dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"

                            android:textSize="20sp"
                            android:text="Delete"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>


                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <ImageView
                        android:id="@+id/iv_cover"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/image2"
                        android:scaleType="centerCrop"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_song_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Love yourself"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:lines="1"
                        android:ellipsize="end"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/iv_cover"
                        app:layout_constraintRight_toLeftOf="@id/btn_select"/>

                    <TextView
                        android:id="@+id/tv_singer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="2dp"
                        android:drawableLeft="@drawable/ic_stars_black_24dp"
                        android:text="Justin bieber"
                        android:textColor="#FFB7B7B7"
                        android:textSize="14sp"
                        android:lines="1"
                        android:ellipsize="end"
                        app:layout_constraintTop_toBottomOf="@id/tv_song_name"
                        app:layout_constraintLeft_toLeftOf="@id/tv_song_name"
                        app:layout_constraintRight_toLeftOf="@id/btn_select"/>

                    <TextView
                        android:textAlignment="textEnd"
                        android:id="@+id/tv_time_ago"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="15 min ago"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_singer"
                        app:layout_constraintLeft_toLeftOf="@id/tv_singer"
                        app:layout_constraintRight_toLeftOf="@id/btn_select"/>

                    <CheckBox
                        android:id="@+id/btn_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                        android:buttonTint="@color/colorPrimaryDark"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                </android.support.constraint.ConstraintLayout>


            </LinearLayout>




        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
