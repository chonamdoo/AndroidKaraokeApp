<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.trung.karaokeapp.fragment.RecentFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@android:color/black"
                            android:drawableEnd="@drawable/ic_clear_black_16dp"
                            android:drawablePadding="8dp"
                            android:id="@+id/text_status_select"
                            android:paddingLeft="8dp"
                            android:layout_centerVertical="true"
                            android:text="0 item selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <LinearLayout
                            android:layout_alignParentEnd="true"
                            android:clickable="true"
                            android:background="@drawable/btn_custom_background_ripple"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:focusable="true">
                            <TextView
                                android:textAlignment="center"
                                android:layout_gravity="center_vertical"
                                android:drawableStart="@drawable/ic_delete_black_24dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"

                                android:textSize="20sp"
                                android:text="Delete"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>


                    </RelativeLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:padding="8dp">


                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/image2"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:text="Love yourself"
                                android:textSize="16sp"
                                app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
                                app:layout_constraintStart_toEndOf="@+id/imageView6"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="4dp"
                                android:drawableLeft="@drawable/ic_stars_black_24dp"
                                android:text="Justin bieber"
                                android:textColor="#FFB7B7B7"
                                android:textSize="14sp"
                                app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
                                app:layout_constraintStart_toEndOf="@+id/imageView6"
                                app:layout_constraintTop_toBottomOf="@+id/textView8" />

                            <TextView
                                android:textAlignment="textEnd"
                                android:id="@+id/textView10"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="4dp"
                                android:textSize="14sp"
                                android:text="15 min ago"
                                android:textColor="@android:color/darker_gray"
                                app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
                                app:layout_constraintStart_toEndOf="@+id/imageView6"
                                app:layout_constraintTop_toBottomOf="@+id/textView9" />

                            <LinearLayout
                                android:id="@+id/linearLayout2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/button_shape_green"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <Button
                                    android:id="@+id/button3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="36dp"
                                    android:background="@drawable/btn_custom_background_ripple"
                                    android:text="Sing"
                                    android:textColor="#139623" />
                            </LinearLayout>

                        </android.support.constraint.ConstraintLayout>


                    </LinearLayout>

                </LinearLayout>



            </android.support.v7.widget.CardView>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
